@model UrlCutter.Models.User
@{

}
<div style="width: 100%;">
    <div style="width: 65%; margin-left: auto; margin-right: auto;">
        <form class="class=" d-flex justify-content-center align-items-center"" id="form" asp-action="Index" asp-controller="Login" method="post">
            <input type="text"
                   class="form-control mb-2"
                   placeholder="Kullanıcı Adı giriniz."
                   style="width: 100%; border-radius: 5px; height: 45px;"
                   name="Name" />
            <input type="password"
                   class="form-control mb-2"
                   placeholder="Şifrenizi giriniz."
                   style="width: 100%; border-radius: 5px; height: 45px;"
                   name="pass" />
            <a class="text-success" href="SignUp/Index">Kayıt Ol</a>
            <button class="btn btn-info"
                    type="submit">
                Giriş
            </button>

        </form>
    </div>
</div>
